@model scaweb.Models.Aluno

@{
    ViewBag.Title = "Cadastro de Aluno";
}
@Html.ValidationSummary(true)
<div class="row col-sm-7">
    <div class="panel panel-info panel-title">
        <div class="panel-heading">Cadastro de Aluno</div>
        <p></p>
        @using (Html.BeginForm("Create", "Aluno", FormMethod.Post,
new { @class = "form-horizontal", @role = "form" })) {
            <div class="form-group">
                <label for="INome" class="col-sm-3 control-label"> Nome </label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" placeholder="Nome"
                           name="Nome" id="Nome">
                </div>
            </div>
            <div class="form-group">
                <label for="Imatricula" class="col-sm-3 control-label"> Matricula </label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" placeholder="Matricula"
                           name="Matricula" id="Matricula">
                </div>
            </div>
            <div class="form-group">
                <label for="ICpf" class="col-sm-3 control-label"> Cpf </label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" placeholder="Cpf"
                           name="Cpf" id="Cpf">
                </div>
            </div>
            <div class="form-group">
                <label for="IDataNascimento" class="col-sm-3 control-label"> Dt Nascimento </label>
                <div class="col-sm-8">
                    <input type="date" class="form-control" placeholder="Data Nascimento"
                           name="DataNascimento" id="DataNascimento">
                </div>
            </div>
            <div class="form-group">
                <label for="IEmail" class="col-sm-3 control-label"> Email </label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" placeholder="Email"
                           name="Email" id="Email">
                </div>
            </div>
            <div class="form-group">
                <label for="ISemestreInicio" class="col-sm-3 control-label"> Semestre Inicio </label>
                <div class="col-sm-8">
                    <input type="number" class="form-control" placeholder="Semestre Inicio"
                           name="SemestreInicio" id="SemestreInicio">
                </div>
            </div>
            <div class="form-group">
                <label for="IAnoInicio" class="col-sm-3 control-label"> Ano Inicio </label>
                <div class="col-sm-8">
                    <input type="number" class="form-control" placeholder="Ano Inicio"
                           name="AnoInicio" id="AnoInicio">
                </div>
            </div>
            <div class="form-group">
                <label for="ITelefone" class="col-sm-3 control-label"> Telefone </label>
                <div class="col-sm-8">
                    <input type="tel" class="form-control" placeholder="Telefone"
                           name="Telefone" id="Telefone">
                </div>
            </div>
            <div class="form-group">
                <label for="IIdentidade" class="col-sm-3 control-label"> Identidade </label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" placeholder="Identidade"
                           name="Identidade" id="Identidade">
                </div>
            </div>
            <div class="form-group">
                <label for="IEndereco" class="col-sm-3 control-label"> Endereco </label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" placeholder="Endereco"
                           name="Endereco" id="Endereco">
                </div>
            </div>
            <div class="panel-footer">
                <div class="col-md-offset-7">
                    <div class="btn-group btn-group-sm">
                        <button type="submit" class="btn btn-info">Salvar</button>
                        <a href="@Url.Action("Index", "Aluno")" class="btn btn-info btn-sm">Voltar</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <p></p>
</div>