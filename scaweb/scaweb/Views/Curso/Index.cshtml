@model List<scaweb.Models.Curso>

@{
    ViewBag.Title = "Cadastro de Cursos";
}

<div class="panel panel-info">
    <div class="panel-heading">Cursos</div>
    <div class="panel-body">
        <a href="@Url.Action("Create", "Curso")"
           class="btn btn-default btn-info btn-sm">
            <span class="glyphicon glyphicon-plus"></span> Novo
        </a>
    </div>
    <table class="table table-bordered table-condensed table-responsive table-hover table-striped">
        <tr>
            <th>
                Código
            </th>
            <th>
                Descrição
            </th>
            <th>
                Ações
            </th>
        </tr>
        @if (Model != null) {
            foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            @Html.ActionLink("Editar", "Edit",
                                      new { id = item.Id },
                                      new { @class = "btn btn-info btn-sm" })

                            @Html.ActionLink("Visualizar", "Details",
                                     new { id = item.Id },
                                     new { @class = "btn btn-info btn-sm" })

                            @Html.ActionLink("Excluir", "Delete",
                                   new { id = item.Id },
                                    new { @class = "btn btn-info btn-sm" })
                        </div>
                    </td>
                </tr>
            }
        }
    </table>
</div>



