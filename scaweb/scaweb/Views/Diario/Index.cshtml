@model List<scaweb.Models.Diario>

@{
    ViewBag.Title = "Cadastro de Diario";
}

<div class="panel panel-info">
    <div class="panel-heading">Instituições</div>
    <div class="panel-body">
        <a href="@Url.Action("Create", "Diario")"
           class="btn btn-default btn-info btn-sm">
            <span class="glyphicon glyphicon-plus"></span> Novo
        </a>
    </div>
    <table class="table">
        <tr>
            <th>
                Avaliação 1
            </th>
            <th>
                Avaliação 2
            </th>
            <th>
                Avaliação Final
            </th>
            <th>
                Faltas
            </th>
            <th></th>
        </tr>
        @if (Model != null) {
            foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.V1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.V2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faltas)
            </td>
            <td>
                <div class="btn-group btn-group-sm">
                    @Html.ActionLink("Editar", "Edit",
                        new { V1 = item.V1 },
                        new { @class = "btn btn-info btn-sm" })

                    @Html.ActionLink("Visualizar", "Details",
                       new { V1 = item.V1 },
                       new { @class = "btn btn-info btn-sm" })

                    @Html.ActionLink("Excluir", "Delete",
                     new { V1 = item.V1 },
                      new { @class = "btn btn-info btn-sm" })
                </div>
            </td>
        </tr>
            }
        }
    </table>
</div>



