@model List<scaweb.Models.Turma>

@{
    ViewBag.Title = "Cadastro de Turmas";
}

<div class="panel panel-info">
    <div class="panel-heading">Turmas</div>
    <div class="panel-body">
        <a href="@Url.Action("Create", "Turma")"
           class="btn btn-info btn-sm">
            <span class="glyphicon glyphicon-plus"></span> Novo
        </a>
    </div>
    <table class="table">
        <tr>
            <th>
                Código
            </th>
            <th>
                Numero
            </th>
            <th>
                Instituição
            </th>
            <th></th>
        </tr>
        @if (Model != null) {
            foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Numero)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Instituicao.Nome)
                    </td>


                    <td>
                        <div class="btn-group btn-group-sm">
                            @Html.ActionLink("Editar", "Edit",
                                 new { id = item.Id },
                                 new { @class = "btn btn-info btn-sm" })

                            @Html.ActionLink("Visualizar", "Details",
                                new { id = item.Id },
                                new { @class = "btn btn-info btn-sm" })

                            @Html.ActionLink("Excluir", "Delete",
                               new { id = item.Id },
                                new { @class = "btn btn-info btn-sm" })
                        </div>
                    </td>
                </tr>
            }
        }
    </table>
</div>



